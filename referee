<script>
/*
  Setup
  1) Replace WHATSAPP_NUMBER with your real number in international format.
     Example for Brazil: 5511999999999
  2) This page can read URL params:
     invitedBy = name shown in the badge
*/
const WHATSAPP_NUMBER = "5511999999999";

function buildWhatsAppLink(invitedByName) {
  const base = "https://wa.me/" + WHATSAPP_NUMBER;
  const text = invitedByName
    ? "Hi! I got a referral from " + invitedByName + " for a free evaluation session."
    : "Hi! I got a referral for a free evaluation session.";
  return base + "?text=" + encodeURIComponent(text);
}

function getParam(name) {
  const url = new URL(window.location.href);
  return url.searchParams.get(name) || "";
}

function applyInviteName() {
  const name = getParam("invitedBy").trim();
  const badge = document.getElementById("invitedBy");

  if (name) {
    badge.textContent = "Invited by " + name;
  } else {
    badge.textContent = "Invited by a friend";
  }

  const link = buildWhatsAppLink(name);
  document.getElementById("waTop").href = link;
  document.getElementById("waMain").href = link;
}

function copyLink() {
  const url = window.location.href;
  navigator.clipboard.writeText(url).then(() => {
    alert("Link copied.");
  }).catch(() => {
    alert("Could not copy link.");
  });
}

applyInviteName();
</script>
